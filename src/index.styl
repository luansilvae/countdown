*
  padding: 0;
  margin: 0;
  box-sizing: border-box;

.countdown
  background: #f1f1f1;
  min-width: 300px;
  margin: 0 auto;

  &__timer
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;

    &-divider
      padding: 0 5px;
      color: blue;
      font-size: 32px;
  
  &__display
    background: blue;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 70px;
    padding: 5px 10px;

    &-value
      font-size: 32px;
      font-weight: bold;
      color: #fff;

    &-type
      font-size: 15px;
      color: #fff;
  
  &__expired
    &-text
      font-size: 32px;
      font-weight: bold;
      color: blue;